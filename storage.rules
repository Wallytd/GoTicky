rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    // Per-user profile uploads. Only the authenticated owner can read/write their files.
    // Expected structure: /users/{uid}/profile/* (images only)
    match /users/{uid}/{allPaths=**} {
      // Images are surfaced in the UI via public HTTPS download URLs which are fetched
      // without Firebase Auth attached (e.g. by Coil/HTTP clients). To ensure profile
      // avatars render correctly, allow public read access for image content while
      // keeping write access restricted to the owning user.
      allow read: if resource != null && resource.contentType.matches('image/.*');
      allow write: if request.auth != null
        && request.auth.uid == uid
        && request.resource.size < 5 * 1024 * 1024 // 5 MB limit
        && request.resource.contentType.matches('image/.*');
    }

    // Admin photos bucket (public read, write limited to signed-in uploads).
    match /adminPhotos/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn()
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }

    // Hero/banner images used on the public home screen.
    // Public read so the home screen can load images without auth, writes allowed
    // with strict size and content-type limits (no auth requirement, to work with
    // anonymous or placeholder sessions).
    match /banners/{allPaths=**} {
      allow read: if true;
      allow write: if
        request.resource.size < 5 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*');
    }

    // Organizer event flyers and assets.
    // Authenticated organizers can upload under /events/{uid}/flyers/**
    match /events/{uid}/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn()
        && request.auth.uid == uid
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }

    // News flash images stored per draft/published item.
    // Public read so the home feed can load thumbnails; writes allowed with
    // size/type limits (mirrors banners) to keep admin tools working even if
    // auth/app-check is not ready.
    match /newsflash/{allPaths=**} {
      allow read: if true;
      allow write: if
        request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }

    // Tonight's heat hero images.
    // Public read so the home card can load; writes limited to signed-in sessions
    // with strict size/content-type.
    match /tonights_heat/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn()
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }

    // For You recommendation images.
    match /recommendations/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn()
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }

    // For any remaining paths not covered above (including legacy, root-level
    // admin/demo assets), allow public READ access only for image content. All
    // writes remain denied so that uploads must go through the scoped rules
    // above (users/, events/, banners/, newsflash/, etc.).
    match /{allPaths=**} {
      allow read: if resource != null && resource.contentType.matches('image/.*');
      allow write: if false;
    }
  }
}
