<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark circular background to match splash screen -->
    <item>
        <shape android:shape="oval">
            <size android:width="108dp" android:height="108dp" />
            <solid android:color="@color/splash_background" />
        </shape>
    </item>
    <!-- Centered GoTicky ticket icon, same inset as launcher foreground -->
    <item>
        <inset android:inset="20dp">
            <bitmap
                android:src="@drawable/ic_launcher"
                android:gravity="center" />
        </inset>
    </item>
</layer-list>
